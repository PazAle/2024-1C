@using ModeloSegundoParcial.Dominio.Entidades
@model List<ModeloSegundoParcial.Dominio.Entidades.Empleado>
@{
    ViewBag.Title = "Listado de Empleados";
}

<h2>Listado de Empleados</h2>

<form>
    <div class="form-group">
        <label for="sucursal">Sucursal:</label>
        <select class="form-control" name="IdSucursal" id="sucursal">
            <option value="">Todas</option>
            @foreach (Sucursal sucursal in ViewBag.Sucursales)
            {
                if (ViewBag.IdSucursalElegida == sucursal.IdSucursal)
                {
                    <option selected="selected" value="@sucursal.IdSucursal">@sucursal.Direccion</option>
                }
                else
                {
                    <option value="@sucursal.IdSucursal">@sucursal.Direccion</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Filtrar</button>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].IdEmpleado)</th>
                <th>@Html.DisplayNameFor(model => model[0].NombreCompleto)</th>
                <th>Sucursal</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdEmpleado)</td>
                    <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdSucursalNavigation.Direccion)</td>
                </tr>
            }
    </table>
</form>